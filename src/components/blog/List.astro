---
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<ul>
  {
    posts
      .sort((a, b) => a.productId - b.productId)
      .map((post) => (
        <li class="mb-12 md:mb-20">
          <Item post={post} />
        </li>
      ))
  }
</ul>
